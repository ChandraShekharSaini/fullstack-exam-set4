<%- include('../layout', { body: `
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Edit Subject</h1>
      <form action="/subjects/<%= subject._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="subjectName">Subject Name</label>
          <input type="text" id="subjectName" name="subjectName" class="form-control" value="<%= subject.subjectName %>" readonly>
          <small class="form-text text-muted">Subject name cannot be changed</small>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" id="price" name="price" class="form-control" step="0.01" value="<%= subject.price %>" required>
        </div>
        <div class="form-group">
          <label for="units">Units</label>
          <input type="number" id="units" name="units" class="form-control" value="<%= subject.units %>" required>
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" id="image" name="image" class="form-control-file" accept="image/*">
          <small class="form-text text-muted">Leave empty to keep current image</small>
          <img src="<%= subject.image %>" class="img-thumbnail mt-2" style="max-width: 200px;">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Update Subject</button>
      </form>
      <a href="/subjects" class="btn btn-secondary btn-block mt-3">Back to Subjects</a>
    </div>
  </div>
</div>
` }) %>